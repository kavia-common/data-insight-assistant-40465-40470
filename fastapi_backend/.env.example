# Application
APP_NAME=Data Insight Assistant
APP_ENV=development
LOG_LEVEL=INFO
PORT=3001
CORS_ALLOWED_ORIGINS=*

# Database (choose ONE approach)
# 1) Primary: Single connection string (psycopg2 driver enforced; sslmode=require appended if missing)
# Example: postgresql+psycopg2://user:password@host:5432/postgres?sslmode=require
DATABASE_URL=

# 2) Back-compat (deprecated):
SUPABASE_DB_CONNECTION_STRING=

# 3) Discrete vars (all required if using this approach). The app will build DATABASE_URL on startup.
user=
password=
host=
port=
dbname=

# Optional: disable SQLAlchemy connection pooling (use NullPool) in ephemeral preview environments
DISABLE_DB_POOL=false

# Logging SQL statements (False by default)
DB_ECHO=false

# Supabase REST client (optional feature)
ENABLE_SUPABASE=false
SUPABASE_URL=
SUPABASE_ANON_KEY=
