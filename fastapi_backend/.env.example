# FastAPI Backend - Environment Example
# Copy to .env and adjust values for your environment.

# App metadata and server
APP_NAME="Data Insight Assistant"
APP_ENV="development"
LOG_LEVEL="INFO"
PORT=3001

# CORS
# Comma-separated origins or "*" to allow all
CORS_ALLOWED_ORIGINS="*"

# MongoDB configuration
# REQUIRED for /data and /nlq endpoints to function
# Use standard MongoDB URI format. Examples:
# mongodb://localhost:27017
# mongodb+srv://username:password@cluster.yourhost.mongodb.net/?retryWrites=true&w=majority
MONGO_URI="mongodb://localhost:27017"
MONGO_DB_NAME="exampledb"
MONGO_COLLECTION="items"
# When true, will ping the DB on startup (non-fatal if it fails)
MONGO_PING_ON_STARTUP=true

# Feature flags
ENABLE_SUPABASE=false
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Supabase (only used when ENABLE_SUPABASE=true)
SUPABASE_URL=""
SUPABASE_ANON_KEY=""

# Optional future integrations
OPENAI_API_KEY=""
