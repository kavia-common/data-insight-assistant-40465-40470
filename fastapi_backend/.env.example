# Application
APP_NAME=Data Insight Assistant
APP_ENV=development
LOG_LEVEL=INFO
PORT=3001
CORS_ALLOWED_ORIGINS=*

# Database (primary)
# Preferred SQLAlchemy URL for Postgres (psycopg2 driver)
# Example: postgresql+psycopg2://user:pass@host:5432/postgres
DATABASE_URL=

# Optional: Echo SQL statements (True/False)
DB_ECHO=False

# Backward-compat (deprecated): used only if DATABASE_URL is not provided
SUPABASE_DB_CONNECTION_STRING=

# Optional Supabase REST client (feature-flagged)
ENABLE_SUPABASE=false
SUPABASE_URL=
SUPABASE_ANON_KEY=

# NLQ toggles
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Third-party keys (optional / future)
OPENAI_API_KEY=

# Discrete Postgres credentials used by src.db.postgres_engine (standalone utility)
# These are NOT required for app startup. They allow `python -m src.db.postgres_engine` testing.
user=
password=
host=
port=
dbname=
