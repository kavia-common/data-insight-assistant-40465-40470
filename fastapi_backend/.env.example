# Example environment configuration for FastAPI backend

# App metadata and behavior
APP_NAME=Data Insight Assistant
APP_ENV=development
LOG_LEVEL=INFO

# Networking
# Default port for the service; the app binds to 0.0.0.0 on this port.
PORT=3001
CORS_ALLOWED_ORIGINS=*

# MongoDB configuration (optional; app starts without DB)
# MONGO_URI=mongodb://localhost:27017
# MONGO_DB_NAME=exampledb
# MONGO_COLLECTION=items
MONGO_PING_ON_STARTUP=true

# Supabase (optional feature-flag)
ENABLE_SUPABASE=false
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# NLQ feature flags
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Optional key for future AI integrations
# OPENAI_API_KEY=
