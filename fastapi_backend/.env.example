# FastAPI backend example environment configuration

# App metadata and server settings
APP_NAME="Data Insight Assistant"
APP_ENV="development"
LOG_LEVEL="INFO"
PORT=3001
CORS_ALLOWED_ORIGINS="*"

# Database configuration (PostgreSQL via SQLAlchemy)
# Preferred: single DATABASE_URL (psycopg2 driver; sslmode=require appended if absent)
# FORMAT: postgresql+psycopg2://<user>:<password>@<host>:<port>/<dbname>?sslmode=require
# Note: Some environments use a proxy port (e.g., 6543). Use the port appropriate for your setup.
# Example (replace values):
# DATABASE_URL="postgresql+psycopg2://postgres.USER:YOURPASSWORD@db.PROJECT.supabase.co:6543/postgres?sslmode=require"
DATABASE_URL=""

# Legacy/deprecated fallback (only used when DATABASE_URL is empty)
SUPABASE_DB_CONNECTION_STRING=""

# Alternative (discrete parts). If you do not set DATABASE_URL, setting ALL of these will compose one:
# Use the correct port for your environment. For Supabase direct connections, 5432 is common; some previews use 6543.
user=""
password=""
host=""
port=""
dbname=""

# Optional: disable SQLAlchemy connection pooling in ephemeral environments
# DISABLE_DB_POOL="true"

# SQLAlchemy echo (verbose SQL logs)
DB_ECHO="false"

# Supabase HTTP client (feature-flagged; does NOT use psycopg2)
ENABLE_SUPABASE="false"
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
# Optional: default table for /supabase/ping when ?table is omitted
SUPABASE_TEST_TABLE=""

# NLQ feature toggles
ENABLE_NLQ="true"
ENABLE_NLQ_AI="false"

# Optional keys for future integrations
OPENAI_API_KEY=""
