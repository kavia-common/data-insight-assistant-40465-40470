# FastAPI Backend - Environment Variables

# App
APP_NAME="Data Insight Assistant"
APP_ENV="development"
LOG_LEVEL="INFO"
PORT=3001
CORS_ALLOWED_ORIGINS="*"

# Database
# REQUIRED: SQLAlchemy connection string to PostgreSQL.
# For sync stack (this project): use psycopg2 driver
#   Example: postgresql+psycopg2://user:pass@host:5432/dbname
DATABASE_URL="postgresql+psycopg2://<user>:<password>@<host>:5432/<database>"

# Optional: SQLAlchemy echo SQL (true/false)
DB_ECHO=false

# Backward-compatibility: If DATABASE_URL is not set, the app will also check
# SUPABASE_DB_CONNECTION_STRING. Prefer DATABASE_URL going forward.
# SUPABASE_DB_CONNECTION_STRING="postgresql+psycopg2://user:pass@host:5432/dbname"

# Feature Flags
ENABLE_SUPABASE=false
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Supabase (optional; required only when ENABLE_SUPABASE=true)
SUPABASE_URL=""
SUPABASE_ANON_KEY=""

# Optional API keys
OPENAI_API_KEY=""
