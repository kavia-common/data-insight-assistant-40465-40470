# Application
APP_NAME=Data Insight Assistant
APP_ENV=development
LOG_LEVEL=INFO
PORT=3001
# For multiple origins use comma-separated values or "*" to allow all
CORS_ALLOWED_ORIGINS=*

# MongoDB
# e.g. mongodb://localhost:27017 or mongodb+srv://user:pass@cluster0.abcd.mongodb.net
MONGO_URI=
MONGO_DB_NAME=
MONGO_COLLECTION=
# When true, attempt a MongoDB ping during startup
MONGO_PING_ON_STARTUP=true

# Feature Flags
ENABLE_SUPABASE=false
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Supabase (required only if ENABLE_SUPABASE=true)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Third-party keys (optional)
OPENAI_API_KEY=
