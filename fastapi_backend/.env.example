# FastAPI Backend .env example
# Copy this file to .env and adjust values as needed.

# Application
APP_NAME="Data Insight Assistant"
APP_ENV="development"
LOG_LEVEL="INFO"
# The backend binds to this port. Preview expects 3001.
PORT=3001
CORS_ALLOWED_ORIGINS="*"

# MongoDB (optional; app starts without DB, /data and /nlq will 503)
# MONGO_URI="mongodb://localhost:27017"
# MONGO_DB_NAME="exampledb"
# MONGO_COLLECTION="items"
MONGO_PING_ON_STARTUP=true

# Features
ENABLE_SUPABASE=false
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Supabase (required when ENABLE_SUPABASE=true)
# SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_ANON_KEY="your-anon-key"

# Optional future integrations
# OPENAI_API_KEY=""
