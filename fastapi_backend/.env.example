# Application
APP_NAME=Data Insight Assistant
APP_ENV=development
LOG_LEVEL=INFO
PORT=3001
CORS_ALLOWED_ORIGINS=*

# MongoDB configuration (optional for non-/data use)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=exampledb
MONGO_COLLECTION=items
MONGO_PING_ON_STARTUP=true

# Feature flags
ENABLE_SUPABASE=false
ENABLE_NLQ=true
ENABLE_NLQ_AI=false

# Supabase credentials (required when ENABLE_SUPABASE=true)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Future 3rd-party
OPENAI_API_KEY=
