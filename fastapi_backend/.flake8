[flake8]
# Only lint our application source and tests; exclude virtualenvs and build artifacts.
exclude = .venv,venv,env,__pycache__,.git,dist,build,.mypy_cache,.pytest_cache
# Set max-line-length to a modern standard
max-line-length = 120
# Ignore some rules that are too strict or noisy for this project:
# F401: imported but unused (common in __init__.py and typing-only imports)
# F403/F405: 'from module import *' and star-import names (we don't use in our code, but 3rd parties do)
# E203: whitespace before ':' (black compatibility)
# W503: line break before binary operator (black compatibility)
# E501: line too long (we use max-line-length instead)
ignore = F401, F403, F405, E203, W503, E501
# Restrict flake8 to our repo paths to prevent scanning site-packages in some CI setups
per-file-ignores =
    __init__.py:F401
